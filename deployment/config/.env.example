# Live Lox Environment Configuration
# Copy this file to /opt/livelox/.env and update the values

# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql://livelox:YOUR_DB_PASSWORD_HERE@localhost:5432/livelox
DB_HOST=localhost
DB_PORT=5432
DB_NAME=livelox
DB_USER=livelox
DB_PASSWORD=YOUR_DB_PASSWORD_HERE

# ========================================
# Redis Configuration
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=  # Leave empty if no password

# ========================================
# Application Configuration
# ========================================
APP_ENV=production
APP_HOST=0.0.0.0
APP_PORT=8000
APP_NAME="Live Lox"
APP_VERSION=1.0.0

# ========================================
# Security
# ========================================
# Generate a random secret key:
# python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_RANDOM_STRING_MINIMUM_32_CHARS

# ========================================
# CORS Configuration
# ========================================
# Add your frontend domains (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ========================================
# News Ingestion Configuration
# ========================================
NEWS_INGESTION_ENABLED=true
NEWS_INGESTION_INTERVAL=300  # Seconds (5 minutes)
NEWS_INGESTION_MODE=normal   # Options: near-lock, normal

# RSS Feed URLs (comma-separated)
RSS_FEEDS=https://www.rotowire.com/rss/news.php?sport=NBA,https://basketball.realgm.com/wiretap/rss.xml

# Twitter/X Monitoring (optional - requires API access)
TWITTER_ENABLED=false
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_BEARER_TOKEN=

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=/var/log/livelox/app.log

# ========================================
# External APIs (if needed)
# ========================================
# Add any external API keys here
# EXTERNAL_API_KEY=your_key_here

# ========================================
# Monitoring & Alerts (optional)
# ========================================
# Slack webhook for alerts
SLACK_WEBHOOK_URL=

# Email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL=

# ========================================
# Performance Tuning
# ========================================
# Number of Gunicorn workers (2-4 x CPU cores)
GUNICORN_WORKERS=2

# Max concurrent connections
MAX_CONNECTIONS=100

# Request timeout (seconds)
REQUEST_TIMEOUT=60
